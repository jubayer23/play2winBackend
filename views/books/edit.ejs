<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Edit Question</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">

<% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
<% } %>

<div class="card">
    <div class="card-header">
        Edit Question
    </div>
    <div class="card-body">
        <form action="/question_ui/update/<%= data.id %>" method="post">
            <div class="form-group">
                <label>Question:</label>
                <input type="text" class="form-control" name="question" value="<%= data.question %>" autocomplete="off">
            </div>
            <div class="form-group">
                <label>Category:</label>
                <input type="text" class="form-control" name="category" value="<%= data.category %>" autocomplete="off">
            </div>
            <div class="form-group">
                <label>Difficulty:</label>
                <input type="text" class="form-control" name="difficulty" value="<%= data.difficulty %>" autocomplete="off">
            </div>
            <div class="form-group">
                <label>Correct Ans:</label>
                <input type="text" class="form-control" name="correct" value="<%= data.correct_answer %>" autocomplete="off">
            </div>
            <div class="form-group">
                <label>Option 1:</label>
                <input type="text" class="form-control" name="option1" value="<%= data.incorrect_answers.option1 %>" autocomplete="off">
            </div>
            <div class="form-group">
                <label>Option 2:</label>
                <input type="text" class="form-control" name="option2" value="<%= data.incorrect_answers.option2 %>" autocomplete="off">
            </div>
            <div class="form-group">
                <label>Option 3:</label>
                <input type="text" class="form-control" name="option3" value="<%= data.incorrect_answers.option3 %>" autocomplete="off">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-info" value="Update"/>
            </div>
        </form>
    </div>
</div>

</body>
</html>