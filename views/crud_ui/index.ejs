<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Question Bank</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

</head>
<body class="container bg-secondary" style="margin-top: 50px;">

<% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
<% } %>

<% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
<% } %>

<div class="card bg-dark text-white ">
    <div class="card-header">
        <ul class="nav nav-pills w-100">
            <li class="nav-pill active">
                <a class="nav-link">Question Bank</a>
            </li>
            <li class="nav-pill ml-auto">
                <a class="nav-link active" href="/question_ui/add">Add Question</a>
            </li>
        </ul>
    </div>
    <div class="card-body">

        <% if(data.length) { %>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Question</th>
                    <th scope="col">Category</th>
                    <th width="200px">Action</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i< data.length; i++) { %>
                    <tr>
                        <th scope="row"><%= (i+1) %></th>
                        <td><%= data[i].question%></td>
                        <td><%= data[i].category%></td>
                        <td>
                            <a class="btn btn-success edit" href="../question_ui/edit/<%=data[i].id%>">Edit</a>
                            <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="../question_ui/delete/<%=data[i].id%>">Delete</a>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        <% } %>

        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No Question found!</p>
        <% } %>


            <div class="text-center">

                <ul class="pagination  no-margin justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item ">
                        <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                    </li>

                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </div>


    </div>


</div>

</body>
</html>